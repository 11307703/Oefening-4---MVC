<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oefening4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Oefening4.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="text-center">
        <h1>PXL Oefening</h1>
    </header>
    <div class="row m-1 p-1">
    <div id="menu" class="col-3 border border-primary">
        <ul>
           <li>
             <a asp-action="Index" asp-controller="Home">Home</a>
           </li>
           <li>
             <a asp-action="Index" asp-controller="Client">Clients</a>
           </li>
           <li>
             <a asp-action="Index" asp-controller="Location">Locations</a>
           </li>
           <li>
             <a asp-action="Index" asp-controller="Overview" >Overview</a>
           </li>
        </ul>
    </div>
        <div id="main" class="col-9 border border-primary">
                @RenderBody()
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
           <p>PXL Oefening - @DateTime.Now.ToShortDateString()</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
